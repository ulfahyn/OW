<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3fc5e4">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis :"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Boneka"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jas"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed Cover"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:text="Baju"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/checkBox"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celana"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handuk"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_above="@+id/checkBox8"
        android:layout_alignStart="@+id/checkBox5" />

    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_below="@+id/checkBox3"
        android:text="Selimut"
        android:textColor="#777777"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/checkBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkBox6"
        android:layout_alignTop="@+id/checkBox7"
        android:text="Seprai"
        android:textColor="#777777"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Other"
        android:layout_below="@+id/checkBox8"
        android:layout_alignStart="@+id/checkBox8"
        android:layout_marginStart="8dp"
        android:textColor="#777777"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah :"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/checkBox3" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/checkBox7"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:text="Parfum :"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/editText5"
        android:layout_alignStart="@+id/textView2" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="6dp"
        android:text="Jasmine"
        android:textColor="#777777"
        android:textSize="20dp"/>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lavender"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_alignEnd="@+id/checkBox4" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton2"
        android:layout_below="@+id/radioButton2"
        android:text="Lilly"
        android:textColor="#777777"
        android:textSize="20dp"/>

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rose"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_alignStart="@+id/radioButton3"
        android:layout_below="@+id/radioButton2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/radioButton4"
        android:layout_marginTop="10dp"
        android:text="Paket :"
        android:textColor="#777777"
        android:textSize="20dp" />

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Express (1 Hari)"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/editText5" />

    <RadioButton
        android:id="@+id/radioButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reguler (3-4 Hari)"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_below="@+id/radioButton6"
        android:layout_alignStart="@+id/radioButton4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catatan :"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/radioButton7"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#777777"
        android:textSize="20dp"
        android:layout_marginTop="13dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/radioButton7" />


</RelativeLayout>